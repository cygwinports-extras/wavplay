DESCRIPTION="Plays and records WAV files"
HOMEPAGE=	# defunct
SRC_URI="http://ibiblio.org/pub/linux/apps/sound/players/${P}.tar.gz"
PATCH_URI="mirror://gentoo/${P}.patch
           mirror://portage/media-sound/${PN}/files/${P}-gcc34.patch
           1.4-sys-soundcard.h.patch"

src_compile() {
	lndirs
	cd ${B}
	cygmake CC="${CC}" CFLAGS="${CFLAGS}" LDOPTS="${LDFLAGS}" no_x
}

src_install() {
	cd ${B}
	dobin wavplay.exe
	dosym wavplay.exe /usr/bin/wavrec
	doman wavplay.1
}
